{
  "name": "boilerplate-phaser-cordova-es6",
  "version": "1.0.0",
  "description": "Boilerplate Project for Phaser Games with ES6 - Cordova power included",
  "main": "main.js",
  "scripts": {
    "serve": "npm run clean && npm run copy && webpack-dev-server --content-base build/ --history-api-fallback --inline --mode development",
    "build:js:dev": "webpack --config ./webpack.config.js --mode development",
    "build:js:prod": "webpack --config ./webpack.config.js --mode production",
    "copy": "node scripts/copy",
    "clean": "rm -rf build",
    "build": "npm run clean && npm run build:js:dev && npm run copy",
    "build:prod": "npm run clean && npm run build:js:prod && npm run copy",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint -c .eslintrc -f checkstyle app > eslint.xml",
    "lint:local": "eslint app",
    "stats": "webpack -p --config ./webpack.prod.config.js --profile --json > stats.json"
  },
  "author": "Andreas Teufel",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "browser-sync": "^2.23.6",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.2",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^3.0.6",
    "offline-plugin": "^4.9.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.1.1",
    "raw-loader": "^0.5.1",
    "script-loader": "^0.7.2",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "es6-promise": "^4.1.1",
    "mobile-detect": "^1.4.0",
    "phaser": "^3.2.1"
  }
}
